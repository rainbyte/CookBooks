<?xml version="1.0" encoding="UTF-8"?>
<frame name="catalogue" size="640,280" title="Catalogo"
	defaultCloseOperation="JFrame.EXIT_ON_CLOSE">

	<panel border="EmptyBorder(10,10,10,10)">
		<layout type="FormLayout"
			columns="right:max(40dlu;pref), 3dlu, d:grow, 7dlu, right:pref, 3dlu, d:grow"
			rows="p, 3dlu, p, 3dlu, p, 3dlu, p, 3dlu, p, 3dlu, p, 3dlu, p, 3dlu, p, 3dlu, p, 3dlu, p" columnGroups="1,5; 3,7" />

		<titledseparator constraints="1,1,7,1" text="Alta de un libro" />
		
		<label constraints="1,3" text="Titulo" />
		<textfield id="txtTitle"  constraints="3,3,5,1" />
		
		<label constraints="1,5" text="Autor" />
		<textfield id="txtAuthor" constraints="3,5,5,1" />
		
		<label constraints="1,7" text="ISBN" />
		<textfield id="txtIsbn" constraints="3,7,5,1" />
		
		<label constraints="1,9" text="Precio" />
		<textfield id="txtPrice" constraints="3,9,5,1" />
		
		<label constraints="1,11" text="Categoria" />
		<textfield id="txtTags" constraints="3,11,5,1" />
		
		<label constraints="1,13" text="Adjuntar imagen" />
		<textfield id="txtImage" constraints="3,13,5,1" />
		
		<label constraints="1,15" text="Descripcion" />
		<textfield id="txtDescription" constraints="3,15,5,1" />
		
		<label constraints="1,17" text="Fotos adicionales" />
		<textfield id="txtAditional" constraints="3,17,5,1" />
		
		<button id="btnSave" constraints="5,19" text="Aceptar" action="save" />
		<button id="btnCancel" constraints="7,19" text="Cancelar" action="cancel" />
	</panel>
</frame>